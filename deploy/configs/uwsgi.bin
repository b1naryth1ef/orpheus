#!/bin/bash

NPROC=$(nproc)

cd /var/www/emporium/app

kilalll -QUIT uwsgi
/usr/local/bin/uwsgi --lazy -s 127.0.0.1:3035 --wsgi-file uwsgi.py --callable app --processes $(($NPROC * 4)) --threads $NPROC --stats 127.0.0.1:9191 --env UWSGI=1 --env ENV={{ env }} --logto /var/log/emporium/uwsgi.log --pidfile /var/run/emporium/uwsgi.pid

